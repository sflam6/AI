# Flatpak packages
flatpak install flathub com.spotify.Client org.kde.krita org.winehq.Wine net.davidotek.pupgui2 org.inkscape.Inkscape 
flatpak --user remote-add --if-not-exists launcher.moe https://gol.launcher.moe/gol.launcher.moe.flatpakrepo

# yay
sudo pacman -S --needed git base-devel
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

# Drivers by yay
yay -S mkinitcpio-firmware
yay -S xpadneo-dkms

# Apps by yay
yay -S sunshine
yay -S anime-games-launcher-bin 

# Edit environment
sudo sed -i '$a\
GTK_IM_MODULE=fcitx\
QT_IM_MODULE=fcitx\
XMODIFIERS=@im=fcitx\
SDL_IM_MODULE=fcitx\
GLFW_IM_MODULE=fcitx' /etc/environment

rm /eof.sh
