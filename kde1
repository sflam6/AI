# Flatpak packages
flatpak install flathub com.spotify.Client org.winehq.Wine net.davidotek.pupgui2 com.github.zocker_160.SyncThingy com.logseq.Logseq
flatpak install camp.nook.nookdesktop 

# yay
sudo pacman -S --needed git base-devel
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

# Drivers by yay
yay -S mkinitcpio-firmware
yay -S xpadneo-dkms

# Apps by yay
yay -S sunshine
yay -S anime-games-launcher-bin

# Edit environment
sudo sed -i '$a\
GTK_IM_MODULE=fcitx\
QT_IM_MODULE=fcitx\
XMODIFIERS=@im=fcitx\
SDL_IM_MODULE=fcitx\
GLFW_IM_MODULE=fcitx' /etc/environment

# Enable system control
sudo systemctl enable ufw
sudo systemctl start ufw

## Firewall settings
# sunshine firewall setting
sudo ufw allow 47984/tcp
sudo ufw allow 47989/tcp
sudo ufw allow 48010/tcp
sudo ufw allow 47988/udp
sudo ufw allow 47998/udp
sudo ufw allow 47999/udp
sudo ufw allow 48000/udp
sudo ufw allow 48002/udp
sudo ufw allow 48010/udp

# syncthing firewall setting
sudo ufw allow 22000/tcp
sudo ufw allow 22000/udp
sudo ufw allow 21027/udp
sudo ufw reload

sudo rm /eof.sh
