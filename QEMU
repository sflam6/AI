#Install QEMU packages
sudo pacman -S archlinux-keyring qemu-full virt-manager virt-viewer edk2-ovmf dnsmasq vde2 bridge-utils openbsd-netcat libguestfs ebtables iptables virglrenderer --noconfirm --needed

#Activate systemctl
sudo systemctl enable --now libvirtd
sudo virsh net-start default
sudo virsh net-autostart default

# Add KVM auth
sudo usermod -a -G libvirt $USER
sudo usermod -a -G libvirt root
sudo usermod -a -G kvm $USER
sudo usermod -a -G kvm root

# edit /etc/polkit-1/rules.d/50-libvirt.rules
sed -i $a\
polkit.addRule(function(action, subject) {\
    if (action.id == "org.libvirt.unix.manage" &&\
        subject.isInGroup("kvm")) {\
            return polkit.Result.YES;\
    }\
});' /etc/polkit-1/rules.d/50-libvirt.rules

sudo systemctl restart libvirtd

